{
  "dashboard": {
    "id": null,
    "title": "MLOps Production Monitoring",
    "tags": ["mlops", "machine-learning", "monitoring"],
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "API Performance",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(mlops_api_requests_total[5m])",
            "legendFormat": "Requests/sec"
          },
          {
            "expr": "histogram_quantile(0.95, rate(mlops_api_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile latency"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Model Predictions",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(mlops_model_predictions_total[5m])",
            "legendFormat": "{{model_version}} - {{model_algorithm}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Model Accuracy Trends",
        "type": "graph",
        "targets": [
          {
            "expr": "mlops_model_accuracy",
            "legendFormat": "{{model_version}} accuracy"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Data Drift Scores",
        "type": "heatmap",
        "targets": [
          {
            "expr": "mlops_data_drift_score",
            "legendFormat": "{{feature_name}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 5,
        "title": "Circuit Breaker Status",
        "type": "stat",
        "targets": [
          {
            "expr": "mlops_circuit_breaker_state",
            "legendFormat": "{{circuit_breaker_name}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 6,
        "title": "Business KPIs",
        "type": "graph",
        "targets": [
          {
            "expr": "mlops_churn_predictions_high_risk",
            "legendFormat": "High risk customers"
          },
          {
            "expr": "mlops_revenue_impact_dollars",
            "legendFormat": "Revenue impact ($)"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24}
      }
    ]
  }
}